[global]

monitor = 0
follow = mouse
width = 0
height = 500
notification_limit = 5
origin = top-right
offset = 10x10
indicate_hidden = yes
shrink = yes
transparency = 0
notification_height = 0
separator_height = 10
padding = 40
horizontal_padding = 40
text_icon_padding = 20
frame_width = 10
frame_color = "#29343d"
separator_color = "#29343d"
sort = yes
idle_threshold = 120

# text

font = Iosevka 9
line_height = 0
scale = 0
markup = full
format = "%s\n\n%b"
alignment = left
vertical_alignment = center
show_age_threshold = 60
word_wrap = yes
ellipsize = middle
ignore_newline = no
stack_duplicates = true
hide_duplicate_count = false
show_indicators = yes

# icons

#icon_position = off
#min_icon_size = 0
#max_icon_size = 10
#icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

# history

sticky_history = yes
history_length = 20

# misc

browser = /usr/bin/firefox -new-tab
always_run_script = true
title = Dunst
class = Dunst
startup_notification = false
verbosity = mesg
corner_radius = 0
ignore_dbusclose = false
force_xwayland = false

# legacy

force_xinerama = false

# mouse

mouse_left_click = close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all

[experimental]

per_monitor_dpi = false

[urgency_low]

foreground = "#ffffff"
background = "#131a21"
timeout = 10

[urgency_normal]

foreground = "#ffffff"
background = "#131a21"
timeout = 10

[urgency_critical]

foreground = "#f9929b"
background = "#131a21"
timeout = 0

# vim: ft=cfg
